    'stdio/fstatus.c',
    'stdio/fwrite.c',
    'stdio/perror.c',
    'stdio/remove.c',
    'stdio/rename.c',
    'stdio/tmpfile.c',
    'stdio/vfprintf.c',
    'stdio/vfscanf.c',
    'stdio/vsnprintf.c',
    'stdio/vsscanf.c',

    'stdlib/abort.c',
    'stdlib/abs.c',
    'stdlib/atoi.c',
    'stdlib/bsearch.c',
    'stdlib/environ.c',
