Import('manager', 'config')

env = manager.Create(libraries = ['kernel'], flags = {
    'LINKFLAGS': ['-nodefaultlibs'],
    'CPPPATH': [
        Dir('.'),
        Dir('include'),
        Dir('arch/%s/include' % (config['ARCH'])),
    ],
})

sources = map(File, [
    'core/mutex.c',

    'dirent/alphasort.c',
    'dirent/closedir.c',
    'dirent/opendir.c',
    'dirent/readdir.c',
    'dirent/rewinddir.c',
    'dirent/scandir.c',

    'locale/localeconv.c',
    'locale/setlocale.c',

    'posix/access.c',
    #'posix/alarm.c',
    'posix/chdir.c',
    #'posix/chmod.c',
    #'posix/chown.c',
    'posix/close.c',
    'posix/dup.c',
    'posix/execlp.c',
    'posix/execve.c',
    'posix/execvp.c',
    'posix/fcntl.c',
    'posix/fork.c',
    'posix/getcwd.c',
    'posix/getopt.c',
    'posix/getpid.c',
    'posix/ioctl.c',
    'posix/isatty.c',
    'posix/lseek.c',
    'posix/mkdir.c',
    'posix/mknod.c',
    'posix/mman.c',
    'posix/open.c',
    'posix/pipe.c',
    #'posix/poll.c',
    'posix/pwd.c',
    'posix/read.c',
