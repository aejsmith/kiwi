    'string/ffs.c',
    'string/memchr.c',
    'string/memcmp.c',
    'string/memcpy.c',
    'string/memmove.c',
    'string/memset.c',
    'string/strcasecmp.c',
    'string/strcat.c',
    'string/strchr.c',
    'string/strcmp.c',
    'string/strcpy.c',
    'string/strcspn.c',
    'string/strdup.c',
    'string/strerror.c',
    'string/strlen.c',
    'string/strpbrk.c',
    'string/strsep.c',
    'string/strstr.c',
