+/// Kiwi - Kiwi tool chain which can call as(1) and ld(1) directly.
+
+Kiwi::Kiwi(const Driver &D, const llvm::Triple& Triple, const ArgList &Args)
+  : Generic_ELF(D, Triple, Args) {
+  getFilePaths().push_back(getDriver().Dir + "/../lib");
+
+  // When using a sysroot, add '/lib' to allow '/system' to be omitted
+  // in the sysroot.
+  if(!getDriver().SysRoot.empty())
+    getFilePaths().push_back(getDriver().SysRoot + "/lib");
+  getFilePaths().push_back(getDriver().SysRoot + "/system/lib");
+}
